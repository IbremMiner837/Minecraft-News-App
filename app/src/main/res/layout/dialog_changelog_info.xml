<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/progressbar_backround">

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="358dp"
        android:layout_height="179dp"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minecraft"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_changelog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/release_changelog"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_changelog_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.16.210.05"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_changelog_btn"
            android:layout_width="156dp"
            android:layout_height="48dp"
            android:text="@string/changelog"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/dialog_download_btn"
            android:layout_width="156dp"
            android:layout_height="48dp"
            android:text="@string/download"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


</LinearLayout>