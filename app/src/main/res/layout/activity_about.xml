<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".aboutActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <!--View
            android:id="@+id/line"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:padding="8dp"
            android:background="@color/primaryColor"/-->

        <ImageView
            android:id="@+id/about_img"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="56dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="-18dp">

            <TextView
                android:id="@+id/about_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/version"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/version_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=""
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/version_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=""
                android:textSize="21sp"/>
        </LinearLayout>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@color/primaryColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/vk_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:icon="@mipmap/ic_launcher"
                app:iconSize="32sp"
                app:iconPadding="8dp"
                app:iconTint="#2787F5"
                android:textAllCaps="false"
                android:text="@string/we_are_in_vk"
                android:textSize="21sp"
                android:textColor="#2787F5"
                android:textStyle="bold"
                android:textAlignment="textStart"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tiktok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:icon="@mipmap/ic_launcher"
                app:iconSize="32sp"
                app:iconPadding="8dp"
                android:textAllCaps="false"
                android:text="@string/we_are_in_tiktok"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:longClickable="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/discord_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:icon="@mipmap/ic_launcher"
                app:iconSize="32sp"
                app:iconPadding="8dp"
                app:iconTint="#7289DA"
                android:textAllCaps="false"
                android:text="@string/we_are_in_discord"
                android:textSize="21sp"
                android:textColor="#7289DA"
                android:textStyle="bold"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@color/primaryColor"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Â© MCBedrock"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/build_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Realese"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>