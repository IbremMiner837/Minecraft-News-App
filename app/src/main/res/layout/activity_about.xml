<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/about_app"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:layout_scrollFlags="scroll|enterAlways|snap"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:src="@mipmap/ic_launcher"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="JVMFrog"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/AA_AppVersionBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/version"
                            android:textSize="18sp"
                            app:icon="@drawable/ic_info_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/AA_UpdateHistoryBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/update_history"
                            android:textSize="18sp"
                            android:textColor="#FF0E00"
                            app:icon="@drawable/ic_history_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            app:iconTint="#FF0E00"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/AA_SourceCodeBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/source_code"
                            android:textSize="18sp"
                            app:icon="@drawable/ic_code_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/AA_LicenseBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/license"
                            android:textSize="18sp"
                            android:textColor="#FF0E00"
                            app:icon="@drawable/ic_book_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            app:iconTint="#FF0E00"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/AA_IbragimBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ibragim_maltsagov"
                            android:textSize="18sp"
                            app:icon="@drawable/ic_round_person_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/AA_MailBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ibremminer837.dev@gmail.com"
                            android:textSize="18sp"
                            app:icon="@drawable/ic_alternate_email_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/BS_VKGroupBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/we_are_on_vk"
                            android:textSize="18sp"
                            app:icon="@drawable/ic_public_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/BS_OtherAppsBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/other_apps"
                            android:textSize="18sp"
                            app:icon="@drawable/ic_apps_24"
                            app:iconPadding="16dp"
                            app:iconSize="24dp"
                            android:textAlignment="textStart"
                            style="@style/Widget.Material3.Button.TextButton"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>